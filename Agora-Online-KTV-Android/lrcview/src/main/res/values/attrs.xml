<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LrcView">
        <attr name="lrcMarginTop" format="dimension" />
        <attr name="lrcTextSize" format="dimension" />
        <attr name="lrcDividerHeight" format="dimension" />
        <attr name="lrcNormalTextSize" format="dimension" />
        <attr name="lrcNormalTextColor" format="reference|color" />
        <attr name="lrcPastTextColor" format="reference|color" />
        <attr name="lrcFutureTextColor" format="reference|color" />
        <attr name="lrcCurrentTextColor" format="reference|color" />
        <attr name="lrcLabel" format="string" />
        <attr name="lrcEnableDrag" format="boolean" />
        <attr name="lrcTextGravity">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PitchView">
        <attr name="pitchIndicatorColor" format="reference|color" />
        <attr name="pitchDoneTextColor" format="reference|color" />
        <attr name="pitchInitialScore" format="float" />
    </declare-styleable>
</resources>