<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.agora.ard.ktv.ui.LiveRoomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/ktv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/media_meta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/xplay_view_container"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/change_client_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="下麦" />

        <Button
            android:id="@+id/change_audio_track"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/change_client_role"
            android:text="原唱/伴奏" />

        <Button
            android:id="@+id/close_ktv_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="0dp"
            android:text="退出房间" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/play01"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="点歌" />

        <Button
            android:id="@+id/switch_media_file"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="切歌" />

        <Button
            android:id="@+id/switch_mute_status"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="mute/unMute" />

        <Button
            android:id="@+id/pause"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="start/pause" />
    </LinearLayout>

    <TextView
        android:id="@+id/voiceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:text="调节人声音量" />

    <SeekBar
        android:id="@+id/voiceSeekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="100"
        android:progress="50" />

    <TextView
        android:id="@+id/songTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:text="调节伴奏音量" />

    <SeekBar
        android:id="@+id/songSeekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="100"
        android:progress="50" />
</LinearLayout>
